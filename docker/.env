# Required settings
MAP_PATH=$HOME/autoware_map/sample-map-planning

# Vehicle and sensor models
VEHICLE_MODEL=sample_vehicle
SENSOR_MODEL=sample_sensor_kit
VEHICLE_ID=default

# ROS settings
ROS_DOMAIN_ID=0
USE_SIM_TIME=true

# Map files
POINTCLOUD_MAP_FILE=pointcloud_map.pcd
LANELET2_MAP_FILE=lanelet2_map.osm

# Module presets
PLANNING_MODULE_PRESET=default
CONTROL_MODULE_PRESET=default

# Control settings
LATERAL_CONTROLLER_MODE=mpc
LONGITUDINAL_CONTROLLER_MODE=pid
ENABLE_ALL_MODULES_AUTO_MODE=false
CHECK_EXTERNAL_EMERGENCY_HEARTBEAT=false

# Vehicle interface
LAUNCH_VEHICLE_INTERFACE=false

# Simulation settings
LAUNCH_DUMMY_PERCEPTION=true
LAUNCH_DUMMY_VEHICLE=true
LAUNCH_DUMMY_DOORS=true
LOCALIZATION_SIM_MODE=api
INITIAL_ENGAGE_STATE=true
LAUNCH_SCENARIO_SIMULATOR_V2_ADAPTER=false

# Perception simulation settings
PERCEPTION_ENABLE_DETECTION_FAILURE=true
PERCEPTION_ENABLE_OBJECT_RECOGNITION=true
PERCEPTION_ENABLE_TRAFFIC_LIGHT=false
PERCEPTION_USE_BASE_LINK_Z=true

# Sensing settings
SENSING_VISIBLE_RANGE=300.0

# System settings
SYSTEM_RUN_MODE=planning_simulation
LAUNCH_SYSTEM_MONITOR=false
LAUNCH_DUMMY_DIAG_PUBLISHER=true

# Visualization settings
DISPLAY=:0
RVIZ_CONFIG_NAME=autoware.rviz
